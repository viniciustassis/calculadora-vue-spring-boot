// http://www.example.com/exampleapi

let xmls='<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"\n                            xmlns:web="http://www.webserviceX.NET/">\n            <soapenv:Header/>\n            <soapenv:Body>\n              <web:ConversionRate>\n                <web:FromCurrency>INR</web:FromCurrency>\n                <web:ToCurrency>USD</web:ToCurrency>\n              </web:ConversionRate>\n            </soapenv:Body>\n          </soapenv:Envelope>';

axios.post('http://www.webservicex.com/CurrencyConvertor.asmx?wsdl',
           xmls,
           {headers:
                {
                    'Content-Type': 'text/xml',
                    "Access-Control-Allow-Origin" : "*",
                }
           }).then(res=>{
             console.log(res);
           }).catch(err=>{console.log(err)});